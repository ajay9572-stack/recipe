<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.notifications.HomeDetail">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:backgroundTint="#15803D">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DISH DETAIL"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:padding="5dp"
                android:gravity="center"
                >

            </TextView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_detl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:drawableLeft="@drawable/baseline_person_24"
                android:text="  user name "
                android:textSize="25dp" />


            <TextView
                android:id="@+id/posttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_weight="3"
                android:layout_marginHorizontal="10dp"
                android:text="posted time" />

        </LinearLayout>

        <TextView
            android:id="@+id/dish_detl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dish name"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/item_detl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="requide item"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:layout_marginTop="8dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/image_detl"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="15dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp">

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_detl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="time taken:  "
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/catagory_detl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="catagory: "
                android:layout_marginRight="15dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/rate_detl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate this dish"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/description_detl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>



    </LinearLayout>
</layout>