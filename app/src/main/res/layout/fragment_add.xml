<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.notifications.AddFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:backgroundTint="#15803D">
        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add item"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:gravity="center"
            >

        </TextView>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/diskname"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="80dp"
        android:hint="Disk name"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@drawable/stroke"
        android:padding="20dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="160dp"
        android:hint="discription"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@drawable/stroke"
        android:padding="20dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/itemname"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="260dp"
        android:hint="add requide item with quantity"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@drawable/stroke"
        android:padding="20dp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="340dp"
            android:layout_weight="1"
            android:background="@drawable/stroke"
            android:hint="time taken"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/catagory"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="340dp"
            android:layout_weight="1"
            android:background="@drawable/stroke"
            android:hint="catagory"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="430dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="#EDE9E9"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/activity_vertical_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/outline_broken_image_24"
            android:layout_gravity="center">
        </TextView>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginHorizontal="20dp"
        android:text="Submit"
        android:textSize="25dp"
        android:backgroundTint="#15803D"
        />




</FrameLayout>